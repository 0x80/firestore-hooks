{
  "name": "firestore-hooks",
  "version": "1.0.0-3",
  "description": "Simple and typed React hooks for handling Firestore documents",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/firestore-hooks"
  },
  "keywords": [
    "firestore",
    "react",
    "hooks",
    "typescript"
  ],
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint .",
    "compile": "tsc --noEmit",
    "build": "tsup && tsc --emitDeclarationOnly",
    "prepare": "pnpm run compile && pnpm run build",
    "test": "echo \"No test specified\"",
    "clean": "del-cli dist tsconfig.tsbuildinfo"
  },
  "author": "Thijs Koerselman",
  "license": "MIT",
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.0.2",
    "del-cli": "^6.0.0",
    "eslint": "^8.52.0",
    "eslint-config-0x80": "^0.0.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "prettier": "^3.4.2",
    "prettier-plugin-jsdoc": "^1.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "firebase": "^10.0",
    "react": ">=16.8.0"
  }
}
